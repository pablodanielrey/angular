{
    "version": 2,
    "controller": {
        "id": "node1",
        "options": {
            "title": "crossbar-controller"
        }
    },
    "workers": [
        {
            "id": "router1",
            "type": "router",
            "options": {
              "pythonpath": [
                  "../../python",
                  "../../server",
                  "components"
              ]
            },
            "realms": [
                {
                    "name": "authenticators",
                    "roles": [
                        {
                            "name": "authenticator",
                            "permissions": [
                                {
                                    "uri": "authenticate.anonymous",
                                    "match": "exact",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    }
                                },
                                {
                                    "uri": "authenticate.ticket",
                                    "match": "exact",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "public",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": false,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": false
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "core",
                    "roles": [
                        {
                            "name": "authenticated",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": false
                                }
                            ]
                        },
                        {
                            "name": "system",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": false
                                }
                            ]
                        }
                    ]
                }
            ],

            "components": [
                {
                    "type": "class",
                    "classname": "wamp.session.WampSession",
                    "realm": "core",
                    "role": "system"
                },
                {
                    "type": "class",
                    "classname": "wamp.authenticator.AnonymousAuth",
                    "realm": "authenticators",
                    "role": "authenticator"
                },
                {
                    "type": "class",
                    "classname": "wamp.authenticator.TicketAuth",
                    "realm": "authenticators",
                    "role": "authenticator"
                }
            ],

            "transports": [
                {
                    "id": "transport1",
                    "type": "websocket",
                    "debug": false,
                    "serializers": [
                        "json"
                    ],
                    "endpoint": {
                        "type": "tcp",
                        "version": 4,
                        "port": 8080
                    },
                    "auth": {
                        "anonymous": {
                            "type": "dynamic",
                            "authenticator": "authenticate.anonymous",
                            "authenticator-realm": "authenticators"
                        },
                        "ticket": {
                            "type": "dynamic",
                            "authenticator": "authenticate.ticket",
                            "authenticator-realm": "authenticators"
                        }
                    },
                    "cookie": {
                        "name": "cbtid",
                        "length": 64,
                        "max_age": 864000,
                        "store": {
                            "type": "file",
                            "filename": "cookies.dat"
                        }
                    }
                },
                {
                    "id": "web1",
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8081
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../../web"
                        }
                    }
                }
            ]
        },

        {
            "type": "container",
            "options": {
                "pythonpath": [
                    "../../python",
                    "../../server",
                    "components"
                ]
            },
            "components": [
                {
                    "id": "register_serializer_component",
                    "type": "class",
                    "classname": "serializer.RegisterSerializers",
                    "realm": "core",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "127.0.0.1",
                            "port": 8080
                        },
                        "url": "ws://localhost:8080"
                    }
                },
                {
                    "id": "library",
                    "type": "class",
                    "classname": "actions.systems.library.library.LibrarySession",
                    "realm": "core",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "127.0.0.1",
                            "port": 8080
                        },
                        "url": "ws://localhost:8080"
                    }
                }

            ]
        }


    ]
}
